<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Greetings" Height="350" Width="525">
    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" RenderTransformOrigin="4.08,2.312" Margin="100,62,93,241" Text="Select a message option and then choose the display button. " Width="324" />
        <RadioButton x:Name="RadioButton1" Content="Hello" HorizontalAlignment="Left" Margin="139,111,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioButton2" Content="Goodbye" HorizontalAlignment="Left" Margin="304,111,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Display" HorizontalAlignment="Left" Margin="216,154,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.038,-0.389" Click="button_Click"/>

    </Grid>
</Window>
