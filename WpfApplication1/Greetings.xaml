        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Greetings" Height="425" Width="625">
    <Grid>
        <TextBlock TextWrapping="Wrap" VerticalAlignment="Bottom" RenderTransformOrigin="4.08,2.312" Margin="0,0,142,316" Width="336" Height="26" HorizontalAlignment="Right" Text="   Select a message option and then choose the Display button."/>
        <RadioButton x:Name="RadioButton1" Content="Hello" HorizontalAlignment="Left" Margin="177,111,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioButton2" Content="Goodbye" HorizontalAlignment="Left" Margin="342,111,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Display" HorizontalAlignment="Left" Margin="254,154,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.038,-0.389" Click="button_Click"/>

    </Grid>
</Window>
